<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.forgotPassActivity">

    <ProgressBar
            android:id="@+id/progresVarRestar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/progresbarColor"
    />

    <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="8dp"
            android:layout_margin="10dp"
            android:hint="@string/email"
            app:layout_constraintBottom_toTopOf="@+id/restarUser"
    />

    <Button
            android:id="@+id/restarUser"
            android:onClick="restarUser"
            android:layout_width="match_parent"
            android:text="RESTAURAR"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/round_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>